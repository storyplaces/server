{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "StoryPlaces story schema v2",
  "description": "This schema defines how a story is stored ",
  "type": "object",
  "properties": {
    "name": {
      "description": "The title of the story",
      "type": "string"
    },
    "author": {
      "description": "The author(s) of the story",
      "type": "string"
    },
    "description": {
      "description": "A description of the story",
      "type": "string"
    },
    "publishState": {
      "description": "If the story is published",
      "type": "string",
      "enum": [
        "published",
        "draft",
        "review"
      ]
    },
    "pages": {
      "description": "The collection of pages in the story",
      "type": "array",
      "items": {
        "$ref": "#/definitions/page"
      },
      "uniqueItems": true
    },
    "functions": {
      "description": "The collection of functions in the story",
      "type": "array",
      "items": {
        "$ref": "#/definitions/function"
      },
      "uniqueItems": true
    },
    "conditions": {
      "description": "The collection of conditions in the story",
      "type": "array",
      "items": {
        "$ref": "#/definitions/condition"
      },
      "uniqueItems": true
    },
    "cachedMediaIds": {
      "description": "The list of media ids to be pre-cached by the reader",
      "type": "array",
      "items": {
        "$ref": "#/definitions/mediaId"
      },
      "uniqueItems": true
    },
    "locations": {
      "descritpion": "The list of locations used in the story",
      "type": "array",
      "items": {
        "$ref": "#/definitions/location"
      },
      "uniqueItems": true
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "pagesMapViewSettings": {
      "$ref": "#/definitions/mapViewSettings"
    },
    "schemaVersion": {
      "description": "The schema this story is written to",
      "type": "string"
    },
    "audience": {
      "$ref": "#/definitions/audience"
    },
    "_id": {
      "type": "string"
    },
    "__v": {
      "type": "number"
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "author",
    "pages",
    "publishState",
    "conditions",
    "functions",
    "cachedMediaIds",
    "locations",
    "pagesMapViewSettings",
    "tags",
    "schemaVersion",
    "audience"
  ],
  "definitions": {
    "page": {
      "type": "object",
      "properties": {
        "id": {
          "description": "The unique identifier for the page",
          "type": "string"
        },
        "_id": {
          "description": "The unique identifier for the page",
          "type": "string"
        },
        "name": {
          "description": "The name of the page",
          "type": "string"
        },
        "content": {
          "description": "The contents of the page",
          "type": "string"
        },
        "pageTransition": {
          "description": "How the page transition should be handled",
          "type": "string",
          "enum": [
            "next",
            "end"
          ]
        },
        "hint": {
          "$ref": "#/definitions/pageHint"
        },
        "functions": {
          "description": "Array of functions which reading this page will trigger",
          "type": "array",
          "items": {
            "$ref": "#/definitions/functionReference"
          },
          "uniqueItems": true
        },
        "conditions": {
          "$ref": "#/definitions/conditionsReferenceArray"
        }
      },
      "required": [
        "id",
        "name",
        "content",
        "pageTransition",
        "functions",
        "hint",
        "conditions"
      ],
      "additionalProperties": false
    },
    "mediaId": {
      "description": "The ID of a media item which the reader should cache when the story is loaded",
      "type": "string"
    },
    "pageHint": {
      "description": "Object used to show textual hint and an optional map marker to the page's location",
      "type": "object",
      "properties": {
        "direction": {
          "description": "Textual guidance to the page's location",
          "type": "string"
        },
        "locations": {
          "description": "List of location references",
          "type": "array",
          "items": {
            "$ref": "#/definitions/locationReference"
          },
          "uniqueItems": true
        }
      },
      "required": [
        "direction",
        "locations"
      ],
      "additionalProperties": false
    },
    "locationReference": {
      "description": "The name field of a top level location entry",
      "type": "string",
      "minLength": 1
    },
    "functionReference": {
      "description": "The name field of a top level function entry",
      "type": "string",
      "minLength": 1
    },
    "conditionReference": {
      "description": "The name field of a top level condition entry",
      "type": "string"
    },
    "variableReference": {
      "description": "The name of a variable in the reading state",
      "type": "string",
      "minLength": 1
    },
    "conditionsReferenceArray": {
      "description": "Array of conditions",
      "type": "array",
      "items": {
        "$ref": "#/definitions/conditionReference"
      }
    },
    "condition": {
      "type": "object",
      "oneOf": [
        {
          "$ref": "#/definitions/condition-Comparison"
        },
        {
          "$ref": "#/definitions/condition-Check"
        },
        {
          "$ref": "#/definitions/condition-Location"
        },
        {
          "$ref": "#/definitions/condition-Logical"
        },
        {
          "$ref": "#/definitions/condition-TimePassed"
        },
        {
          "$ref": "#/definitions/condition-TimeRange"
        }
      ]
    },
    "condition-Logical": {
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "logical"
          ]
        },
        "operand": {
          "type": "string",
          "enum": [
            "AND",
            "OR"
          ]
        },
        "conditions": {
          "$ref": "#/definitions/conditionsReferenceArray"
        }
      },
      "required": [
        "id",
        "type",
        "operand",
        "conditions"
      ],
      "additionalProperties": false
    },
    "condition-Comparison": {
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "comparison"
          ]
        },
        "operand": {
          "$ref": "#/definitions/conditionComparisonOperand"
        },
        "a": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/variableReference"
            }
          ]
        },
        "b": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/variableReference"
            }
          ]
        },
        "aType": {
          "$ref": "#/definitions/conditionComparisonType"
        },
        "bType": {
          "$ref": "#/definitions/conditionComparisonType"
        }
      },
      "required": [
        "id",
        "type",
        "operand",
        "a",
        "b",
        "aType",
        "bType"
      ],
      "additionalProperties": false
    },
    "condition-Check": {
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "check"
          ]
        },
        "variable": {
          "$ref": "#/definitions/variableReference"
        }
      },
      "required": [
        "id",
        "type",
        "variable"
      ],
      "additionalProperties": false
    },
    "condition-Location": {
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "location"
          ]
        },
        "bool": {
          "type": "string",
          "enum": [
            "true",
            "false"
          ]
        },
        "location": {
          "$ref": "#/definitions/locationReference"
        }
      },
      "required": [
        "id",
        "type",
        "bool",
        "location"
      ],
      "additionalProperties": false
    },
    "condition-TimePassed": {
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "timepassed"
          ]
        },
        "minutes": {
          "type": "number",
          "minimum": 0
        },
        "variable": {
          "$ref": "#/definitions/variableReference"
        }
      },
      "required": [
        "id",
        "type",
        "minutes",
        "tsVariableName"
      ],
      "additionalProperties": false
    },
    "condition-TimeRange": {
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "timerange"
          ]
        },
        "first": {
          "type": "string",
          "pattern": "[0-9]{1,2}:[0-9]{2}"
        },
        "last": {
          "type": "string",
          "pattern": "[0-9]{1,2}:[0-9]{2}"
        }
      },
      "required": [
        "id",
        "type",
        "first",
        "last"
      ],
      "additionalProperties": false
    },
    "conditionComparisonType": {
      "type": "string",
      "enum": [
        "Variable",
        "Integer",
        "String"
      ]
    },
    "conditionComparisonOperand": {
      "type": "string",
      "enum": [
        "==",
        "!=",
        "<=",
        ">=",
        "<",
        ">"
      ]
    },
    "function": {
      "type": "object",
      "oneOf": [
        {
          "$ref": "#/definitions/function-Set"
        },
        {
          "$ref": "#/definitions/function-SetTimeStamp"
        },
        {
          "$ref": "#/definitions/function-Increment"
        }
      ]
    },
    "function-Set": {
      "properties": {
        "conditions": {
          "$ref": "#/definitions/conditionsReferenceArray"
        },
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "set"
          ]
        },
        "variable": {
          "$ref": "#/definitions/variableReference"
        },
        "value": {
          "type": "string"
        },
        "functions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/functionReference"
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "conditions",
        "type",
        "variable",
        "value"
      ]
    },
    "function-SetTimeStamp": {
      "properties": {
        "conditions": {
          "$ref": "#/definitions/conditionsReferenceArray"
        },
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "settimestamp"
          ]
        },
        "variable": {
          "$ref": "#/definitions/variableReference"
        },
        "functions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/functionReference"
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "conditions",
        "type",
        "variable"
      ]
    },
    "function-Increment": {
      "properties": {
        "conditions": {
          "$ref": "#/definitions/conditionsReferenceArray"
        },
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "increment"
          ]
        },
        "variable": {
          "$ref": "#/definitions/variableReference"
        },
        "value": {
          "type": "string"
        },
        "functions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/functionReference"
          },
          "uniqueItems": true
        }

      },
      "additionalProperties": false,
      "required": [
        "id",
        "conditions",
        "type",
        "variable",
        "value"
      ]
    },
    "location": {
      "type": "object",
      "oneOf": [
        {
          "$ref": "#/definitions/locationCircle"
        }
      ]
    },
    "locationCircle": {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "circle"
          ]
        },
        "id": {
          "type": "string"
        },
        "lat": {
          "type": "number",
          "minimum": -90,
          "maximum": 90
        },
        "lon": {
          "type": "number",
          "minimum": -180,
          "maximum": 180
        },
        "radius": {
          "type": "number",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "mapViewSettings": {
      "type": "object",
      "properties": {
        "map": {
          "type": "boolean"
        },
        "pageArrows": {
          "type": "boolean"
        },
        "pageDistance": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "audience": {
      "type": "string",
      "enum": [
        "family",
        "general",
        "advisory"
      ]
    }
  }
}
